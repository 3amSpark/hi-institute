---
import MessageCircle from "@repo/ui/icons/message-circle.astro";
import { buildWhatsAppUrl } from "../constants";

interface Props {
  href?: string;
}

const { href = buildWhatsAppUrl() } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  aria-label="Enviar mensaje"
  class="from-initia-light to-initia highlight fixed right-6 bottom-6 z-50 flex size-16 cursor-pointer items-center justify-center rounded-full bg-radial-[at_50%_80%] text-white shadow-lg transition-transform hover:scale-110"
>
  <MessageCircle class="size-6" />
</a>
