---
import NavLink from "./nav-link.astro";
---

<nav class="fixed top-0 right-0 left-0 z-50 bg-white/90 backdrop-blur-sm">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-20 items-center justify-between">
      <!-- Logo -->
      <a href="/" class="shrink-0">
        <img src="/logo.svg" alt="Hi Fem Care" class="h-8 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden items-center gap-8 lg:flex">
        <NavLink href="/ginecologia">Ginecología</NavLink>
        <NavLink href="#vph">VPH</NavLink>
        <NavLink href="/endometriosis" exact>Endometriosis</NavLink>
        <NavLink href="/uro-ginecologia" exact>Uroginecología</NavLink>
        <NavLink href="/fem-care-total" exact>Femcare Total</NavLink>
        <NavLink href="/monalisa-touch" exact>Monalisa Touch</NavLink>
      </div>

      <!-- Mobile Menu Button -->
      <button class="p-2 lg:hidden" aria-label="Abrir menú">
        <svg
          class="text-iroko h-6 w-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu (hidden by default) -->
  <div class="hidden lg:hidden">
    <div class="space-y-3 border-t border-gray-100 bg-white px-4 py-4">
      <NavLink href="/ginecologia" class="block">Ginecología</NavLink>
      <NavLink href="#vph" class="block">VPH</NavLink>
      <NavLink href="/endometriosis" class="block" exact>Endometriosis</NavLink>
      <NavLink href="/uro-ginecologia" class="block" exact
        >Uroginecología</NavLink
      >
      <NavLink href="/fem-care-total" class="block" exact>Femcare Total</NavLink
      >
      <NavLink href="/monalisa-touch" class="block" exact
        >Monalisa Touch</NavLink
      >
    </div>
  </div>
</nav>
