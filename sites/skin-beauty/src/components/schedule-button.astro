---
interface Props {
  text: string;
  href: string;
}
const { href, text } = Astro.props as Props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-block w-fit bg-radial-[at_50%_80%] text-lg from-ziggurat to-smokey-pink text-white rounded-full py-2 uppercase font-heading px-7 group relative overflow-hidden cursor-pointer highlight"
>
  <span class="invisible">{text}</span>
  <span
    class="absolute inset-0 flex items-center justify-center -translate-y-full group-hover:translate-y-0 transition-transform duration-300"
  >
    {text}
  </span>
  <span
    class="absolute inset-0 flex items-center justify-center translate-y-0 group-hover:translate-y-full transition-transform duration-300"
  >
    {text}
  </span>
</a>
