---
interface Props {
  navItems: Array<{
    id: string;
    label: string;
    href?: string;
    children?: Array<{
      id: string;
      label: string;
      href?: string;
      children?: Array<{
        id: string;
        label: string;
        href?: string;
      }>;
    }>;
  }>;
}

const { navItems } = Astro.props;
---

<nav id="navbar">
  <div class="navbar-container">
    <div class="navbar-logo">ARCHON™</div>
    <ul class="navbar-links">
      {navItems.map((item) => (
        <li class="navbar-item" data-item-id={item.id}>
          <a href={item.href || "#"} class="navbar-link">
            {item.label}
            {item.children && item.children.length > 0 && (
              <span class="navbar-caret">▼</span>
            )}
          </a>
          {item.children && item.children.length > 0 && (
            <div class="navbar-dropdown" data-dropdown-id={item.id}>
              <div class="dropdown-content">
                {item.children.map((child) => (
                  <div class="dropdown-section">
                    <a
                      href={child.href || "#"}
                      class="dropdown-item dropdown-parent"
                    >
                      {child.label}
                    </a>
                    {child.children && child.children.length > 0 && (
                      <div class="dropdown-children">
                        {child.children.map((grandchild) => (
                          <a
                            href={grandchild.href || "#"}
                            class="dropdown-item dropdown-child"
                          >
                            {grandchild.label}
                          </a>
                        ))}
                      </div>
                    )}
                  </div>
                ))}
              </div>
            </div>
          )}
        </li>
      ))}
    </ul>
    <div class="navbar-actions">
      <button class="btn-primary">Book Online</button>
      <button class="btn-secondary">Gift Vouchers</button>
    </div>
  </div>
</nav>

<style>
  #navbar {
    z-index: 9999 !important;
    position: sticky;
    top: 0;
    background-color: var(--color-eggshell);
    width: 100%;
    border-bottom: 1px solid var(--color-iroko) / 0.1;
  }

  .navbar-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .navbar-logo {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-iroko);
    font-family: var(--font-family-sans);
  }

  .navbar-links {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .navbar-item {
    position: relative;
  }

  .navbar-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--color-iroko);
    font-family: var(--font-family-sans);
    font-size: 0.9375rem;
    transition: color 0.2s;
  }

  .navbar-link:hover {
    color: var(--color-brand-primary);
  }

  .navbar-caret {
    font-size: 0.75rem;
    transition: transform 0.2s;
  }

  .navbar-item[data-open="true"] .navbar-caret {
    transform: rotate(180deg);
  }

  .navbar-dropdown {
    position: absolute;
    background-color: var(--color-eggshell);
    border: 1px solid var(--color-iroko) / 0.1;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    min-width: 250px;
    padding: 1rem;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: opacity 0.2s, visibility 0.2s, transform 0.2s;
    pointer-events: none;
  }

  .navbar-item[data-open="true"] .navbar-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: auto;
  }

  .dropdown-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .dropdown-section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .dropdown-section:not(:last-child) {
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-iroko) / 0.1;
  }

  .dropdown-item {
    text-decoration: none;
    color: var(--color-iroko);
    font-family: var(--font-family-sans);
    font-size: 0.875rem;
    padding: 0.5rem 0.75rem;
    border-radius: 0.25rem;
    transition: background-color 0.2s, color 0.2s;
  }

  .dropdown-item:hover {
    background-color: var(--color-iroko) / 0.05;
    color: var(--color-brand-primary);
  }

  .dropdown-parent {
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
  }

  .dropdown-children {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding-left: 0.5rem;
  }

  .dropdown-child {
    font-weight: 400;
    text-transform: none;
    font-size: 0.875rem;
  }

  .navbar-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .btn-primary,
  .btn-secondary {
    padding: 0.625rem 1.25rem;
    border-radius: 0.375rem;
    font-family: var(--font-family-sans);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    border: none;
  }

  .btn-primary {
    background-color: var(--color-iroko);
    color: var(--color-eggshell);
  }

  .btn-primary:hover {
    background-color: var(--color-iroko) / 0.9;
  }

  .btn-secondary {
    background-color: transparent;
    color: var(--color-iroko);
    border: 1px solid var(--color-iroko);
  }

  .btn-secondary:hover {
    background-color: var(--color-iroko) / 0.05;
  }
</style>

<script>
  import { computePosition, flip, offset, shift } from "@floating-ui/dom";

  // Initialize dropdowns
  document.addEventListener("DOMContentLoaded", () => {
    const navbarItems = document.querySelectorAll(".navbar-item");

    navbarItems.forEach((item) => {
      const link = item.querySelector(".navbar-link") as HTMLElement | null;
      const dropdown = item.querySelector(".navbar-dropdown") as HTMLElement | null;

      if (!link || !dropdown) return;

      let isOpen = false;

      const updatePosition = async () => {
        if (!isOpen) return;

        const { x, y } = await computePosition(link, dropdown, {
          placement: "bottom-start",
          middleware: [offset(8), flip(), shift({ padding: 16 })],
        });

        Object.assign(dropdown.style, {
          left: `${x}px`,
          top: `${y}px`,
        });
      };

      const handleMouseEnter = () => {
        isOpen = true;
        item.setAttribute("data-open", "true");
        updatePosition();
      };

      const handleMouseLeave = () => {
        isOpen = false;
        item.removeAttribute("data-open");
      };

      link.addEventListener("mouseenter", handleMouseEnter);
      item.addEventListener("mouseleave", handleMouseLeave);

      // Update position on scroll/resize
      const handleScroll = () => updatePosition();
      const handleResize = () => updatePosition();
      window.addEventListener("scroll", handleScroll, { passive: true });
      window.addEventListener("resize", handleResize);
    });
  });
</script>
