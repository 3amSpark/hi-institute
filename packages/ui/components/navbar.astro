---
interface Props {
  logo?: string;
  navItems: Array<{
    id: string;
    label: string;
    href?: string;
    category?: string;
    children?: Array<{
      id: string;
      label: string;
      href?: string;
      children?: Array<{
        id: string;
        label: string;
        href?: string;
      }>;
    }>;
  }>;
}

const { logo = "HI | SKIN & BEAUTY", navItems } = Astro.props;
---

<nav id="navbar">
  <div class="navbar-container">
    <a href="/" class="navbar-logo">{logo}</a>
    <div class="navbar-right">
      <ul class="navbar-links">
        {navItems.map((item) => (
          <li class="navbar-item" data-item-id={item.id}>
            {item.children && item.children.length > 0 ? (
              <button type="button" class="navbar-link navbar-button">
                {item.label}
                <span class="navbar-caret">â–¼</span>
              </button>
            ) : (
              <a href={item.href || "#"} class="navbar-link">
                {item.label}
              </a>
            )}
            {item.children && item.children.length > 0 && (
              <div class="navbar-dropdown" data-dropdown-id={item.id}>
                <div class="dropdown-content">
                  {/* {item.category && (
                    <div class="dropdown-category">{item.category}</div>
                  )} */}
                  {item.children.map((child) => (
                    <div class="dropdown-section">
                      {child.children && child.children.length > 0 ? (
                        <a
                        href={child.href || "#"}
                        class="dropdown-category dropdown-parent"
                        >
                          {child.label}
                        </a>
                        ) : (
                        <a
                        href={child.href || "#"}
                        class="dropdown-item dropdown-child"
                        >
                          {child.label}
                        </a>
                      )
                        
                      }
                      {child.children && child.children.length > 0 && (
                        <div class="dropdown-children">
                          {child.children.map((grandchild) => (
                            <a
                              href={grandchild.href || "#"}
                              class="dropdown-item dropdown-child"
                            >
                              {grandchild.label}
                            </a>
                          ))}
                        </div>
                      )}
                    </div>
                  ))}
                </div>
              </div>
            )}
          </li>
        ))}
      </ul>
      <div class="navbar-actions">
        <button class="btn-primary">Agenda</button>
        <button class="btn-secondary">Regala</button>
      </div>
    </div>
  </div>
</nav>

<style>
  #navbar {
    z-index: 9999 !important;
    position: sticky;
    top: 0;
    background-color: var(--color-eggshell);
    width: 100%;
    height: fit-content;
  }

  .navbar-container {
    display: flex;
    justify-content: space-between;
    padding: 0rem 1rem;
    max-width: 1420px;
    margin: 0 auto;
    min-height: 80px;
  }

  .navbar-right {
    display: flex;
    height: auto;
    gap: 1.5rem;
  }

  .navbar-logo {
    display: flex;
    align-items: center;
    height: auto;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-iroko);
    font-family: var(--font-family-sans);
    text-decoration: none;
    transition: color 0.2s;
  }

  .navbar-logo:hover {
    color: var(--color-brand-primary);
  }

  .navbar-links {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    height: auto;
    align-items: center;
  }

  .navbar-item {
    display: flex;
    position: relative;
    height: 100%;
    padding: 1rem 1rem;
    border-bottom-width: 1.5px;
    border-color: transparent;
    transition: all ease-in-out 0.4s;
  }

  .navbar-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--color-iroko);
    font-family: var(--font-family-sans);
    font-size: 0.9375rem;
    transition: color 0.2s;
    background: none;
    border: none;
    cursor: pointer;
  }

  .navbar-link:hover {
    color: var(--color-brand-primary);
  }

  .navbar-button {
    padding: 0;
  }

  .navbar-caret {
    font-size: 0.75rem;
    transition: transform 0.2s;
  }

  .navbar-item[data-open="true"] .navbar-caret {
    transform: rotate(180deg);
  }

  .navbar-item[data-open="true"] {
    border-color: var(--color-iroko);
  }

  .navbar-dropdown {
    position: absolute;
    background-color: var(--color-eggshell);
    min-width: 280px;
    max-width: 400px;
    padding: 1.5rem;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: opacity 0.2s, visibility 0.2s, transform 0.2s;
    pointer-events: none;
    left: 0;
  }

  .navbar-item[data-open="true"] .navbar-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: auto;
  }

  .dropdown-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    z-index: 10;
  }

  .dropdown-category {
    font-weight: 500;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    color: color-mix(in srgb, var(--color-iroko) 60%, transparent);
    padding: 0.5rem 0.5rem;
    margin: 0;
    border-bottom: 1px solid color-mix(in srgb, var(--color-iroko) 15%, transparent);
    pointer-events: none;
    user-select: none;
  }

  .dropdown-section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .dropdown-section:not(:last-child) {
    margin-bottom: 0.3rem;
    padding-bottom: 0.3rem;
    /* border-bottom: 1px solid color-mix(in srgb, var(--color-iroko) 10%, transparent); */
  }

  .dropdown-item {
    text-decoration: none;
    color: var(--color-iroko);
    font-family: var(--font-family-sans);
    font-size: 0.875rem;
    padding: 0.5rem 0.75rem;
    border-radius: 0.25rem;
    transition: background-color 0.2s, color 0.2s;
  }

  .dropdown-item:hover {
    background-color: color-mix(in srgb, var(--color-iroko) 5%, transparent);
    color: var(--color-brand-primary);
  }

  .dropdown-parent {
    font-weight: 500;
    text-transform: none;
    font-size: 0.875rem;
    letter-spacing: normal;
  }

  .dropdown-children {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding-left: 0.5rem;
  }

  .dropdown-child {
    font-weight: 400;
    text-transform: none;
    font-size: 0.875rem;
  }

  .navbar-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .btn-primary,
  .btn-secondary {
    padding: 0.625rem 1.25rem;
    border-radius: 0.1rem;
    font-family: var(--font-family-sans);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    border: none;
  }

  .btn-primary {
    background-color: var(--color-iroko);
    color: var(--color-eggshell);
  }

  .btn-primary:hover {
    background-color: color-mix(in srgb, var(--color-iroko) 90%, transparent);
  }

  .btn-secondary {
    background-color: transparent;
    color: var(--color-iroko);
    border: 1px solid var(--color-iroko);
  }

  .btn-secondary:hover {
    background-color: color-mix(in srgb, var(--color-iroko) 5%, transparent);
  }
</style>

<script>
  import { computePosition, flip, offset, shift } from "@floating-ui/dom";

  // Initialize dropdowns
  document.addEventListener("DOMContentLoaded", () => {
    const navbarItems = document.querySelectorAll(".navbar-item");
    let openDropdown: HTMLElement | null = null;

    const closeAllDropdowns = () => {
      navbarItems.forEach((item) => {
        item.removeAttribute("data-open");
      });
      openDropdown = null;
    };

    const updatePosition = async (
      link: HTMLElement,
      dropdown: HTMLElement
    ) => {
      const { x, y } = await computePosition(link, dropdown, {
        placement: "bottom-start",
        middleware: [offset(17), flip(), shift({ padding: 16 })],
      });

      Object.assign(dropdown.style, {
        left: `${x-40}px`,
        top: `${y}px`,
      });
    };

    navbarItems.forEach((item) => {
      const link = item.querySelector(".navbar-link") as HTMLElement | null;
      const dropdown = item.querySelector(".navbar-dropdown") as HTMLElement | null;

      if (!link || !dropdown) return;

      const handleClick = (e: Event) => {
        e.preventDefault();
        e.stopPropagation();

        const isCurrentlyOpen = item.getAttribute("data-open") === "true";

        // Close all dropdowns first
        closeAllDropdowns();

        // If this one wasn't open, open it
        if (!isCurrentlyOpen) {
          item.setAttribute("data-open", "true");
          openDropdown = item as HTMLElement;
          updatePosition(link, dropdown);
        }
      };

      link.addEventListener("click", handleClick);
    });

    // Close dropdowns when clicking outside
    document.addEventListener("click", (e) => {
      const target = e.target as HTMLElement;
      const clickedInsideNavbar = target.closest("#navbar");
      
      if (!clickedInsideNavbar && openDropdown) {
        closeAllDropdowns();
      }
    });

    // Update position on scroll/resize for open dropdown
    const handleScroll = () => {
      if (openDropdown) {
        const link = openDropdown.querySelector(".navbar-link") as HTMLElement;
        const dropdown = openDropdown.querySelector(".navbar-dropdown") as HTMLElement;
        if (link && dropdown) {
          updatePosition(link, dropdown);
        }
      }
    };

    const handleResize = () => {
      if (openDropdown) {
        const link = openDropdown.querySelector(".navbar-link") as HTMLElement;
        const dropdown = openDropdown.querySelector(".navbar-dropdown") as HTMLElement;
        if (link && dropdown) {
          updatePosition(link, dropdown);
        }
      }
    };

    window.addEventListener("scroll", handleScroll, { passive: true });
    window.addEventListener("resize", handleResize);
  });
</script>
